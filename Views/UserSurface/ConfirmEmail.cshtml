@using EventPortal.FormModels
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ConfirmEmailViewModel registerationStatus = (ConfirmEmailViewModel)Model;
    var imagePath = registerationStatus.IsSuccess ? "https://img.freepik.com/free-vector/confirmed-concept-illustration_114360-5400.jpg?ga=GA1.1.678515577.1741587335&semt=ais_hybrid&w=740" :
    "https://img.freepik.com/premium-vector/document-error-icon-comic-style-broken-report-cartoon-vector-illustration-white-isolated-background-damaged-splash-effect-business-concept_157943-17073.jpg?ga=GA1.1.678515577.1741587335&semt=ais_hybrid&w=740"; // adjust paths
}
<div class="container-fluid">
    <div class="row">
        <!-- Left Side (Fixed Height Image) -->
        <div class="col-md-6 p-0">
            <img src="@imagePath"
                 alt="Status Image"
                 class="w-100"
                 style="height: 500px; object-fit: cover;" />
        </div>

        <!-- Right Side (Content) -->
        <div class="col-md-6 d-flex align-items-center justify-content-center" style="height: 500px;">
            <div class="text-center px-4">
                <h2 class="text-@((registerationStatus.IsSuccess ? "success" : "danger")) fw-bold mb-3">
                    @registerationStatus.Message
                </h2>

                @if (registerationStatus.IsSuccess)
                {
                    <a href="/loginpage" class="btn btn-primary mt-3">Log In</a>
                }
            </div>
        </div>
    </div>
</div>



